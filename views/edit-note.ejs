<%- include('includes/head.ejs') %>

</head>

<body>
   <%- include('includes/navigation.ejs') %>

    <main>
        <form action="/user/<% if (editing) { %>edit-note<% } else { %>add-note<% } %>" method="POST">
            <div>
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<% if (editing) { %><%= note.title %><% } %>">
            </div>
            <div>
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="5"><% if (editing) { %><%= note.description %><% } %></textarea>
            </div>
            <div>
                <label for="color">Color</label>
                <input type="text" name="color" id="color" value="<% if (editing) { %><%= note.color %><% } %>">
            </div>
            <% if (editing) { %>
                <input type="hidden" value="<%= note._id %>" name="noteId">
            <% } %>

            <button class="btn" type="submit"><% if (editing) { %>Update Note<% } else { %>Add Note<% } %></button>
        </form>
    </main>
<%- include('includes/end.ejs') %>